<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.klarasapps.theguideofrijeka.Theatres"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/backgroundcolor"
    android:gravity="top">

    <ScrollView
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--theatre zajc icon -->
        <android.support.v7.widget.CardView
            android:id="@+id/tzajc_card"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Croatian National Theatre Ivan pl. Zajc"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textSize="24sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>

    <ScrollView
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Rijeka City Puppet Theatre icon -->
        <android.support.v7.widget.CardView
            android:id="@+id/puppet_card"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Rijeka City Puppet Theatre"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textSize="24sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>

    <ScrollView
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Ri Teatar icon -->
        <android.support.v7.widget.CardView
            android:id="@+id/kalvarija_card"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"

            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_margin="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Ri Teatar"
                    android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                    android:textSize="24sp" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </ScrollView>

</LinearLayout>
