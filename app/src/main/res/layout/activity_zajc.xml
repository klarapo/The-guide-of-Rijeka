<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.klarasapps.theguideofrijeka.Zajc">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="175dp"
        android:layout_marginStart="176dp"
        android:layout_marginTop="16dp"
        android:text="Ivan pl. Zajc"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="183dp"
        android:layout_height="243dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="115dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="14dp"
        android:adjustViewBounds="true"
        android:padding="10dp"
        android:src="@drawable/zajc"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="385dp"
        android:layout_height="170dp"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="24dp"
        android:text="The assembly of Ivan pl. Zajc is in front of the Croatian National Theater, which bears his name. The assembly faces the theater, in the style of overseeing the theater. Ivan pl. Zajc (Rijeka, 3 August 1832 - Zagreb, 16 December 1914) is a Croatian composer of Czech descent. He was educated in Milan and worked in Rijeka, Vienna and Zagreb. He left an extremely rich oeuvre: 1200 various works for orchestra, chamber ensembles and piano, then 19 operas, 26 operettas, stage music, Our Father's oratory, about 50 cantatas, 19 masses, 14 Ave Maria, 200 choirs and 170 solo songs."
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button"
        android:onClick="location"
        android:layout_width="69dp"
        android:layout_height="36dp"
        android:layout_marginBottom="7dp"
        android:layout_marginEnd="171dp"
        android:layout_marginStart="171dp"
        android:text="Visit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />
</android.support.constraint.ConstraintLayout>
