<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.klarasapps.theguideofrijeka.PeekPoke" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="58dp"
                android:layout_marginBottom="10dp"
                android:text="City Tower"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                />



            <ImageView
                android:id="@+id/imageView"
                android:layout_width="180dp"
                android:layout_height="249dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView5"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="115dp"
                android:layout_marginStart="115dp"
                android:layout_marginTop="8dp"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/tower"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="305dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="34dp"
                android:layout_marginBottom="20dp"
                android:text="The city tower is one of the symbols of Rijeka, originally representing a typical passage tower through which the fortified city was entered. He still manages to dominate the central part of Corse to this day, though over time many later buildings have overtaken him. The coat of arms of Rijeka is shaped in high relief below the clock on the City Tower. Emperor Leopold I. Habsburg awarded this coat of arms to Rijeka in 1659. Since then, the symbol of the eagle from the coat of arms of Rijeka in official communication has replaced the traditional medieval highlighting of the symbol of the patron saint of the city - St. Vida. The two-headed eagle's heads look heraldically strangely in the same direction. The eagle's claws held the urn from which flowed an inexhaustible stream of water, which was supposed to symbolize the inexhaustible loyalty of the city to the Emperor of Austria."
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <Button
                android:id="@+id/button"
                android:onClick="location"
                android:layout_width="69dp"
                android:layout_height="36dp"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="171dp"
                android:layout_marginStart="171dp"
                android:text="Visit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>