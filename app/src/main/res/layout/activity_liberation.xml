<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.klarasapps.theguideofrijeka.PeekPoke" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="58dp"
                android:layout_marginBottom="10dp"
                android:text="The Liberation Monument"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20dp"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="250dp"
                android:layout_height="350dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/textView5"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="115dp"
                android:layout_marginStart="85dp"
                android:layout_marginTop="14dp"
                android:adjustViewBounds="true"
                android:padding="10dp"
                android:src="@drawable/liberty"
                app:layout_constraintBottom_toTopOf="@+id/textView6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView5" />



            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="213dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="34dp"
                android:text="The Liberation Monument was unveiled on the Delta on May 3, 1955, on the tenth anniversary of the liberation of Rijeka. With his magnificent monument, Matković perpetuated the fighting of the unit of the 4th Army of the National Liberation Army, which in April 1945 liberated the eastern part of the city, that is, the Sušak area, and then on May 3, the western part, thus uniting the city into a whole that had been separated by Rječina until then. The monument, erected at the border of Rijeka and Susak, represents the unification of the two parts of the city. The bronze figures on top of the stone plinth are more than four meters high."
                android:textAlignment="center"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="376dp"
                android:layout_height="137dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="33dp"
                android:layout_marginBottom="10dp"
                android:text=" The deep reliefs at the base of the plinth were made by Raoul Goldoni (Split, 1919 - Zagreb, 1983). On one side are scenes from the war: prisoners, worried mothers with children and shooting patriots. On the other hand are the peacetime scenes of liberation, such as work in industry and a carefree childhood. The monument has the stylistic features of social realism."
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />

            <Button
                android:id="@+id/button"
                android:onClick="location"
                android:layout_width="69dp"
                android:layout_height="36dp"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="171dp"
                android:layout_marginStart="171dp"
                android:text="Visit"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6" />




        </LinearLayout>
    </ScrollView>
</LinearLayout>